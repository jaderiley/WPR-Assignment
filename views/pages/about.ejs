<%- include('../partials/header') %>

<h1>About Our Team</h1>

<div class="game-container team-container">
  <div class="game-header">
    <span class="game-title">TEAM MEMBER</span>
  </div>
  <div class="game-content">
    <div class="team-grid">
      <% team.forEach(member => { %>
        <div class="team-member">
          <div class="member-icon">
            <img src="<%= member.icon %>" alt="<%= member.name %>'s icon" class="team-icon">
          </div>
          <div class="member-info">
            <h3 class="member-name"><%= member.name %></h3>
            <p class="member-role"><%= member.role %></p>
            <p class="member-game">Favorite Game: <%= member.game %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
