<%- include('../partials/header') %>

<div class="contact-bg py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 contact-card">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="contact-icon mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#0d6efd" class="bi bi-envelope-paper" viewBox="0 0 16 16">
                                    <path d="M6.5 1.5A1.5 1.5 0 0 0 5 3v.5H2A1.5 1.5 0 0 0 .5 5v8A1.5 1.5 0 0 0 2 14.5h12a1.5 1.5 0 0 0 1.5-1.5V5A1.5 1.5 0 0 0 14 3.5h-3V3a1.5 1.5 0 0 0-1.5-1.5h-3Zm0 1h3A.5.5 0 0 1 10 3v.5H6V3a.5.5 0 0 1 .5-.5ZM2 4.5h12A.5.5 0 0 1 14.5 5v.217l-6.5 4.333-6.5-4.333V5A.5.5 0 0 1 2 4.5Zm12 10H2a.5.5 0 0 1-.5-.5V6.383l6.276 4.184a.5.5 0 0 0 .448 0L14.5 6.383V14a.5.5 0 0 1-.5.5Z"/>
                                </svg>
                            </div>
                            <h1 class="mb-2">Contact Us</h1>
                            <p class="lead mb-0">Have questions or suggestions? We'd love to hear from you!</p>
                        </div>
                        <!-- Success message placeholder -->
                        <div id="contactSuccess" class="alert alert-success d-none text-center" role="alert">
                            Thank you for reaching out! We'll get back to you soon.
                        </div>
                        <form action="/contact" method="POST" class="mt-4">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.contact-bg {
    background: linear-gradient(135deg, #e3f0ff 0%, #f9f9f9 100%);
    min-height: 100vh;
}
.contact-card {
    border-radius: 1rem;
    background: #fff;
}
.contact-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 70px;
    height: 70px;
    background: #e3f0ff;
    border-radius: 50%;
    margin: 0 auto 1rem auto;
    box-shadow: 0 2px 8px rgba(13,110,253,0.08);
}
</style>

<%- include('../partials/footer') %>
